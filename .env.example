# metasurvey environment variables
# Copy to .env and fill in your values:
#   cp .env.example .env

# MongoDB connection (required)
METASURVEY_MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net

# Database name (default: metasurvey)
METASURVEY_DB=metasurvey

# JWT signing secret (change in production!)
METASURVEY_JWT_SECRET=your-secret-here

# Admin email for institutional account approvals
METASURVEY_ADMIN_EMAIL=admin@example.com

# Git ref for metasurvey R package install in Shiny container
METASURVEY_REF=main

# Port overrides (optional)
# API_PORT=8787
# SHINY_PORT=3838
